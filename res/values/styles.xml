<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="main_tab_bottom">
        <item name="android:textSize">@dimen/tab_bottom_font_size</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/tab_background</item>
        <item name="android:paddingTop">@dimen/tab_bottom_padding_up</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/tab_bottom_padding_drawable</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="setting_normaluse_checkbox ">
        <item name="android:textSize">@dimen/tab_bottom_font_size</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/tab_background</item>
        <item name="android:paddingTop">@dimen/tab_bottom_padding_up</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/tab_bottom_padding_drawable</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="sub_view_pager_manager ">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">#f0982e</item>
        <item name="android:layout_margin">4dip</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="sub_view_pager_manager_textview ">
        <item name="android:layout_width">130dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">8dip</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:textSize">26dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="sub_view_pager_convtools_relative ">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dip</item>
        <item name="android:padding">3dip</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="sub_view_pager_convtools_textview ">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">27dip</item>
        <item name="android:textColor">#fe6102</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="sub_top_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/sub_top_height</item>
        <item name="android:background">@color/orange</item>
    </style>

    <style name="sub_top_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">18dip</item>
    </style>

    <style name="returnbutton_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/returnbutton_selector</item>
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:layout_marginRight">15dip</item>
    </style>

    <style name="activity_myaccout_lefttext_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dip</item>
    </style>

    <style name="activity_myaccout_righttext_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dip</item>
    </style>

    <style name="conv_listbutton_style">
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@drawable/conv_listbutton_backgroud</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
 <style name="normaluse_radiobutton_style">
        <item name="android:background">@drawable/sub_viewpager_settings_list_bg_unchecked</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>

    </style>
    
 
    <style name="show_conv_tools_text ">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">#fe6102</item>
        <item name="android:textStyle">bold</item>
         <item name="android:layout_marginRight">10dip</item>
    </style>
    
      <style name="show_conv_tools_textview ">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dip</item>
        <item name="android:lineSpacingExtra">5dip</item>     
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="show_convtoolslist_background" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <!-- 设置背景 -->
        <item name="android:windowBackground">@color/transparent_background</item>
        <!-- 设置底层可见 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AnimationFade">

        <!-- textview左右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/in_lefttoright</item>
        <item name="android:windowExitAnimation">@anim/anim_show_out</item>
    </style>

</resources>