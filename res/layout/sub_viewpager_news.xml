<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relative_news_no_service"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/imageview_news_no_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/image_no_service" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_news_defeault"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="visible" >

        <ProgressBar
            android:id="@+id/progress_news_defeault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/textview_news_defeault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/progress_news_defeault"
            android:src="@drawable/image_newspage_defeatlt" />
    </RelativeLayout>

    <com.utopia.structs.MyListView
        android:id="@+id/listview_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:headerDividersEnabled="false"
        android:cacheColorHint="@color/transparent"
        android:visibility="invisible" />

</RelativeLayout>