<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_news_background"
  	android:paddingBottom="10dip"
     >
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:paddingTop="10dip"
        android:layout_alignParentTop="true"
        android:background="#d8d8d8" />
    
    <ImageView
        android:id="@+id/imageview_news_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" 
        android:paddingRight="5dip"
        android:paddingLeft="10dip"
        />

    <LinearLayout
        android:id="@+id/liner_news_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imageview_news_picture"
        android:layout_marginRight="40dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_news_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dip"
            android:textColor="#000000"
            android:singleLine="true" 
            android:textSize="15dip"
          
            />

        <TextView
            android:id="@+id/textview_news_content_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dip"
            android:textColor="#000000"
            android:textSize="10dip" />

        <TextView
            android:id="@+id/textview_news_content_auther"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:paddingBottom="1dip"
            android:textSize="8dip" 
            android:layout_gravity="bottom"
          />
    </LinearLayout>



    <ImageView
        android:id="@+id/listview_news_contentbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dip"
        android:src="@drawable/listview_news_contentbutton" />
    


</RelativeLayout>