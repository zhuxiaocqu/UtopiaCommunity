<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotCityActivity"
    android:background="@color/white" >
     <RelativeLayout
        android:id="@+id/relative_setting_about"
        style="@style/sub_top_style"  >

        <ImageView
            android:id="@+id/button_setting_about_back"
            style="@style/returnbutton_style" />

        <TextView
            android:id="@+id/manager_setting_about_view"
            style="@style/sub_top_text_style"         
            android:text="@string/app_name"
           />


    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/relative_setting_about_secondlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:layout_below="@id/relative_setting_about" >       
     <TextView
          android:id="@+id/textview_setting_about_detailinfo" 
             android:layout_width="wrap_content" 
             android:layout_height="wrap_content"
             android:text="@string/app_info" 
             android:textColor="@color/black"
             android:textSize="15dip" 
            />
            
        <TextView
             android:id="@+id/textview_setting_about_detailinfotime"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@id/textview_setting_about_detailinfo"
             android:textSize="8dip" />

    </RelativeLayout>


<RelativeLayout
    android:id="@+id/relative_setting_about_thirdlay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/relative_setting_about_secondlay"
    android:paddingLeft="15dip"
    android:paddingRight="15dip">

            <ImageView
                android:id="@+id/imageview_setting_about_newsshow_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/cominfo"
                 />

            <TextView
                android:id="@+id/textview_setting_about_newsshow_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageview_setting_about_newsshow_pic"
             	android:textSize="12dip" 
             	android:textColor="@color/black"
             	/>

            

        </RelativeLayout>
</RelativeLayout>